FROM golang:1.24-alpine AS builder 
ENV CGO_ENABLED=0 \
    GOOS=linux \
    GOARCH=amd64

WORKDIR /build

COPY go.mod go.sum ./

RUN go mod download

COPY . .

RUN go build -o /app . 

FROM alpine:3.17 AS final 
WORKDIR /app

COPY --from=builder /app /bin/image-service 
EXPOSE 8082 

CMD ["/bin/image-service"] 